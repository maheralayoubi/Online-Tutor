        <div class="name"><%= profile.man.name %></div>
      <% } else if (VIEW_MODE === 'girl') { %>
        <div class="avatar">
          <a href="/pc/my.html">
            <img src="../images/global/avatar-girl.png" width="100%" height="auto" alt="<%= profile.girl.name %>">
