            <label for="">クラスの名前</label>
            <div class="form-class-row -name">
              <input type="text" placeholder="入力してください" class="form-control">
            </div>
          </div>

          <div class="form-group">
            <label for="">クラスの日付</label>
            <div class="form-class-row -date">
              <select name="month" class="form-control">
