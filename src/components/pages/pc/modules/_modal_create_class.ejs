                <option value="18日">18日</option>
                <option value="19日">19日</option>
                <option value="20日">20日</option>
                <option value="21日">21日</option>
                <option value="22日">22日</option>
                <option value="23日">23日</option>
                <option value="24日">24日</option>
                <option value="25日">25日</option>
                <option value="26日">26日</option>
                <option value="27日">27日</option>
                <option value="28日">28日</option>
                <option value="29日">29日</option>
                <option value="30日">30日</option>
                <option value="31日">31日</option>
              </select>
            </div>
          </div>

          <div class="form-group">
            <label for="">クラスがはじまる時間</label>
            <div class="form-class-row -time">
              <select name="" class="form-control">
                <option value="">○時</option>
              </select>
              <select name="" class="form-control">
                <option value="">○分</option>
              </select>
            </div>
          </div>

          <div class="form-group">
            <label for="">クラスの料金</label>
            <div class="form-class-row -tuitionfee">
              <select name="" class="form-control">
                <option value="">未選択</option>
              </select>
            </div>
          </div>

          <div class="form-group">
            <div class="form-class-row -create">
              <button type="button" class="button -secondary-outline -block">クラスを作成する</button>
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>
